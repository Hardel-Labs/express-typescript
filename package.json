{
    "name": "express-typescript",
    "version": "1.0.0",
    "description": "Express with Typescript",
    "scripts": {
        "start": "ts-node-dev --respawn -r tsconfig-paths/register src/server.ts",
        "dev": "nodemon --exec ts-node-esm -r tsconfig-paths/register src/server.ts",
        "build": "tsc"
    },
    "keywords": [
        "express",
        "typescript"
    ],
    "author": "Hardel",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/glob": "^8.0.1",
        "@types/node": "^18.11.19",
        "nodemon": "^2.0.20",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "express": "^4.18.2",
        "glob": "^8.1.0"
    }
}